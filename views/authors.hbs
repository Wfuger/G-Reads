{{#each data.authors}}
<div class="row">
  <div class="col-sm-2">
    <a href="/authors/{{id}}"><img src="{{portraitUrl}}" style="{height:25px; width:15px;}" /></a>
  </div>
  <div class="col-sm-8">
  <h1>Author: {{firstName}} {{lastName}} <a href="/authors/{{id}}/edit"><input class="btn btn-primary"type="button" value="Edit"></a><a href="/authors/{{id}}/delete"><input class="btn btn-primary"type="button" value="Delete"></a></h1>
  <p>
    <strong>Biography:</strong> {{bio}}
  </p>
  <ul>
    <h1>Books</h1>
    {{#each titles}}
    <li>
      {{title}}
    </li>
    {{/each}}
  </ul>
</div>
</div>
{{/each}}
