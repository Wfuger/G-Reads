{{#each data.books}}
  <div class="row totalContainer">
    <div class="col-sm-2">
      <a href="/books/{{id}}"><img class="smallImg" src="{{coverUrl}}" style="{height:25px; width:15px;}" /></a>
    </div>
    <div class="col-sm-9 itemContainer">
<div class="row">

    <h1>Title: {{title}} <a href="/books/{{id}}/edit"><a href="/books/{{id}}/delete"><input class="button btn btn-primary"type="button" value="Delete"></a><input class="button btn btn-primary"type="button" value="Edit"></a>
      </h1>
  </div>
    <p>Genre: {{authors.0.name}}</p>
    <p>Description: {{description}}</p>
    <ul>
      <h1>Authors</h1>
        {{#each authors}}
          <li>{{firstName}} {{lastName}}</li>
        {{/each}}
    </ul>
  </div>
  </div>
{{/each}}
