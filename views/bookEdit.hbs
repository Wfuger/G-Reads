<div class="col-sm-5 form">
  <form class="centerMe"action="/books/{{data.book.id}}/edit" method="post">
    <fieldset>
      <label>Title</label><br><input type="text" name="title"  value="{{data.book.title}}"><br>
      <label>Genre</label><br><input type="text" name="genre"  value="{{data.author.lastName}}"><br>
      <label>Cover Image URL</label><br><input type="text" name="coverUrl"  value="{{data.book.coverUrl}}"><br>
      <label>Description</label><br><textarea name="description" rows="8" cols="40" >{{data.book.description}}</textarea><br>
      <input type="submit" value="Edit Book">
    </fieldset>
  </form>
</div>
